# --- App profile ---
CONFIG_PROFILE=local                 # local|staging|prod

# --- Postgres (preferred: DSN; or individual vars if you like) ---
POSTGRES_DSN=postgresql+psycopg2://ncfd:ncfd@localhost:/ncfd
# PGHOST=localhost
# PGPORT=5432
# PGDATABASE=ncfd
# PGUSER=ncfd
# PGPASSWORD=ncfd

# --- DuckDB ---
DUCKDB_PATH=./data/duckdb/analytics.duckdb

# --- Object storage (S3/MinIO) ---
S3_ENDPOINT_URL=http://localhost:9000
S3_REGION=us-east-1
S3_BUCKET=ncfd-raw
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_USE_SSL=false

# --- External sources (non-secret where possible) ---
UNPAYWALL_EMAIL=you@example.com
OPENALEX_EMAIL=you@example.com

# SEC and NCBI are rate-limited; identify politely
SEC_USER_AGENT=ncfd-bot you@example.com
NCBI_TOOL=ncfd
NCBI_EMAIL=you@example.com

# --- Prefect (optional cloud) ---
PREFECT_API_URL=
PREFECT_API_KEY=

# --- API (optional) ---
API_HOST=0.0.0.0
API_PORT=8000

# ---- Postgres (Docker) ----
POSTGRES_USER=ncfd
POSTGRES_PASSWORD=ncfd
POSTGRES_DB=ncfd
POSTGRES_HOST_PORT=5433
POSTGRES_HOST=127.0.0.1

# SQLAlchemy / Alembic URL (host -> container mapping uses POSTGRES_HOST_PORT)
DATABASE_URL=postgresql+psycopg://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_HOST_PORT}/${POSTGRES_DB}

