# Database
DB_HOST=localhost
DB_PORT=5433
DB_USER=ncfd
DB_PASS=ncfd
DB_NAME=ncfd

# plain SQLAlchemy (async drivers would have their own scheme)
DATABASE_URL=postgresql://${DB_USER}:${DB_PASS}@${DB_HOST}:${DB_PORT}/${DB_NAME}
POSTGRES_DSN=postgresql+psycopg2://${DB_USER}:${DB_PASS}@${DB_HOST}:${DB_PORT}/${DB_NAME}
PSQL_DSN=postgresql://${DB_USER}:${DB_PASS}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# OpenAI (Required for LLM features)
OPENAI_API_KEY=text
GEMINI_API_KEY=text


# Storage (Choose one: local or S3)
STORAGE_TYPE=local
LOCAL_STORAGE_ROOT=./data/raw

# Or for S3:
# STORAGE_TYPE=s3
# S3_BUCKET=your-bucket-name
# S3_ACCESS_KEY=your-access-key
# S3_SECRET_KEY=your-secret-key
# S3_REGION=us-east-1

# Optional: Redis for caching
# REDIS_HOST=localhost
# REDIS_PORT=6379

# Optional: API configuration
API_HOST=localhost
API_PORT=8000

# Optional: Data ingestion
CTG_SINCE=2025-01-01
CTG_PAGE_SIZE=100
